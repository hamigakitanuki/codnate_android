<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_back"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"

                android:scrollbarThumbHorizontal="@color/colorPrimary">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <FrameLayout
                        android:layout_width="350dp"
                        android:layout_height="500dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="46dp"
                        android:background="@drawable/frame_style"
                        android:elevation="10dp">

                        <LinearLayout
                            android:layout_width="46dp"
                            android:layout_height="match_parent"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tops_color1"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@drawable/text_style1"
                                android:elevation="4dp" />

                            <TextView
                                android:id="@+id/botoms_color1"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@drawable/text_style3"
                                android:elevation="4dp" />

                            <TextView
                                android:id="@+id/shoese_color1"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/text_style2"
                                android:elevation="4dp" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="46dp">

                            <ImageView
                                android:id="@+id/main_tops_1"
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="227dp"
                                android:layout_marginBottom="25dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/main_botoms1"
                                android:layout_width="100dp"
                                android:layout_height="150dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="200dp"
                                android:layout_marginBottom="25dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/main_shoese1"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="31dp"
                                android:layout_marginTop="375dp"
                                android:layout_marginBottom="126dp"
                                tools:srcCompat="@tools:sample/avatars" />

                            <ImageView
                                android:id="@+id/main_outer1"
                                android:layout_width="129dp"
                                android:layout_height="324dp"
                                android:layout_marginStart="150dp"
                                android:layout_marginTop="45dp"
                                android:layout_marginEnd="13dp"
                                tools:srcCompat="@tools:sample/avatars" />

                        </FrameLayout>

                    </FrameLayout>


                </FrameLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tag_add_lisit_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="500dp"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="350dp"
        android:layout_marginTop="400dp"

        android:backgroundTint="#ffffff"
        android:clickable="true"
        app:srcCompat="@drawable/more_codnate" />


</RelativeLayout>
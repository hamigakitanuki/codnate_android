<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="156dp"
    android:layout_height="178dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/back_invisivle"
    android:elevation="8dp"
    tools:context=".fragment.Card_closet_image">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/closet_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:siShape="@drawable/shape_closet_image"
        app:siSquare="true" />

    <ImageButton
        android:id="@+id/closet_image_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_invisivle"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/closet_image_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:textSize="12dp"
        android:gravity="right"
        android:layout_below="@id/closet_image"
        android:text="TextView" />




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="@color/gray_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recomend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="タイトル"
        android:textSize="24dp" />

    <ImageButton
        android:id="@+id/recomend_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/recomend_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/tanuki_oyasumi" />

    <TextView
        android:id="@+id/recomend_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recomend_image"
        android:text="サブタイトル"
        android:textSize="16dp" />

    <Button
        android:id="@+id/recomend_link_button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/recomend_subtitle"
        android:layout_gravity="center"
        android:background="@drawable/back_invisivle"
        android:text="Button"
        android:textSize="16dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/codnate_frame_relative"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="24dp"
    android:background="@drawable/codnate_frame"
    android:clipToPadding="false"
    android:elevation="10dp">

    <TextView
        android:id="@+id/recomend_awaseru"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="合わせるアイテム"
        android:textSize="12dp"
        />

    <LinearLayout
        android:id="@+id/recomend_fititem1_frame"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:layout_below="@id/recomend_awaseru"
        >

        <TextView
            android:id="@+id/recomend_fititem1_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            />

        <ImageView
            android:id="@+id/recomend_fititem1_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_6" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/recomend_fititem1_frame"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recomend_fititem2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="" />

        <ImageView
            android:id="@+id/recomend_fititem2_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/boot_black" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/recomend_fititem1_frame"
        android:layout_marginLeft="24dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recomend_osusume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="おすすめのアイテム"
            android:textSize="12dp"
            android:layout_toRightOf="@id/recomend_awaseru"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/recomend_item_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:srcCompat="@drawable/e1933662444d96cb48241fabfd6441f4"

            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/recomend_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:text="ああ"/>
        <TextView
            android:id="@+id/recomend_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:text="ああ" />
        <TextView
            android:id="@+id/recomend_move_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="詳細をみる" />
    </LinearLayout>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/frame_style"
    >

    <Button
        android:id="@+id/shop_detail_button"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/back_invisivle"/>
    <HorizontalScrollView
        android:id="@+id/item_list_scroll"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp">

        </LinearLayout>


    </HorizontalScrollView>

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="こうでねえと屋"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/item_list_scroll"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/shop_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="クール系"
        android:textSize="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/shop_name"/>
    <TextView
        android:id="@+id/shop_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="300"
        android:textSize="12dp"
        android:layout_toRightOf="@id/shop_type"
        android:layout_below="@id/shop_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shop_range"
        android:layout_below="@id/shop_name"
        android:layout_marginTop="8dp"
        android:text="m"
        android:textSize="12dp"/>

    <ImageButton
        android:id="@+id/shop_access_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_invisivle"
        app:srcCompat="@drawable/icon_109760_16"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="218dp"
        android:layout_toRightOf="@id/shop_name"
        android:layout_below="@id/item_list_scroll"/>
    <ImageButton
        android:id="@+id/shop_tag_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_invisivle"
        android:layout_toRightOf="@id/shop_access_button"
        android:layout_below="@id/item_list_scroll"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:srcCompat="@drawable/icon_124170_16" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_back"
    android:clipToPadding="false"
    android:layout_margin="24dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnknownId">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_style">


            <FrameLayout
                android:id="@+id/graph_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/closet_style"
                android:elevation="5dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pie_chart"
                    android:layout_width="371dp"
                    android:layout_height="320dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="20dp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/tops_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/graph_frame"
                android:layout_marginTop="8dp"
                android:background="@drawable/closet_style"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/frame_style5"
                    android:text="トップス" />

                <HorizontalScrollView
                    android:id="@+id/s1"
                    android:layout_width="600dp"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:id="@+id/r4"
                        android:layout_width="1000dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />


                </HorizontalScrollView>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/botoms_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tops_frame"
                android:layout_marginTop="8dp"
                android:background="@drawable/closet_style"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/frame_style5"
                    android:text="ボトムス" />

                <HorizontalScrollView
                    android:id="@+id/s2"
                    android:layout_width="600dp"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="1000dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:background="#ffffff"
                        android:orientation="horizontal" />


                </HorizontalScrollView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/onepiece_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/shoese_frame"
                android:layout_marginTop="8dp"
                android:background="@drawable/closet_style"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/frame_style5"
                    android:text="ワンピース" />

                <HorizontalScrollView
                    android:id="@+id/s4"
                    android:layout_width="600dp"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="1000dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="horizontal" />


                </HorizontalScrollView>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/shoese_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/botoms_frame"
                android:layout_marginTop="8dp"
                android:background="@drawable/closet_style"
                android:elevation="5dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/frame_style5"
                    android:text="シューズ" />

                <HorizontalScrollView
                    android:id="@+id/s3"
                    android:layout_width="600dp"
                    android:layout_height="114dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="1000dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="horizontal" />


                </HorizontalScrollView>

            </FrameLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>



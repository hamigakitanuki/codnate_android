<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/top_marui"
    android:backgroundTint="@color/white"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/canpain_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:siShape="@drawable/shape_closet_image"
        android:src="@drawable/chalechara"
        android:elevation="4dp"
        />


    <TextView
        android:id="@+id/kanpage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/canpain_img"
        android:layout_margin="8dp"
        android:text="大勢の前での発表、不安ですよね？そんなあなたを応援するアイテムご用意しました。" />

    <Button
        android:id="@+id/canpain_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/back_invisivle"
        />

</RelativeLayout>